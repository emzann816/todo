<p style="color: green"><%= notice %></p>

<center>
<h1>My Todo Lists</h1>
</center>

<div id="lists">
<table class="table table-bordered">
	<thead>
		<tr>
			<th colspan="5">Todo Item</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
  <% @lists.each do |list| %>
  <% if list.completed %>

  	<tr class="table-info ">
  		<td class="striker link_dark"><%= link_to list.description, edit_list_path(list) %> <% list.description %> </td>
  		<td> <center>
  		<% link_to 'Show', list %> 
   		<%= link_to 'New', new_list_path, class:'btn btn-info' %>
   		<% link_to 'Edit', edit_list_path(list) %>
   		<%= link_to 'Delete', list, class:'btn btn-danger', method: :delete, data:{confirm:'Are you sure?'} %>
   		</center></td>
   		</tr>
   		
  <% else %>
   		<tr >
   		<td> <%= list.description %> </td>
  		<td> <center>
  		<% link_to 'Show', list %> 
  		 <%= link_to 'New', new_list_path, class:'btn btn-info' %>
   		 <%= link_to 'Edit', edit_list_path(list), class:'btn btn-info' %>
   		 <%= link_to 'Delete', list, class:'btn btn-danger', method: :delete, data:{confirm:'Are you sure?'} %>
   		</center></td>
   		</tr>
  <% end %>
   			
    
  <% end %>
  </tbody>
  </table>
 
  	<%= link_to "Add Todo Item", new_list_path, class: "btn btn-success" %>
</div>


