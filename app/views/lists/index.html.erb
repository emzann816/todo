
<div id="lists">
<table class="table table-bordered">
	<thead>
		<tr>
			<th colspan="5">Todo Item</th>
		</tr>
	</thead>

	<tbody>
  <% @lists.each do |list| %>

  <% if list.completed %>
  	<tr class="table-primary text-light">
  		<td class="striker text-light"><%= link_to list.description, edit_list_path(list) %></td>
  		<td>
   		  <%= form_for(list) do |form| %>
   		   <%= form.text_field :description, type: "hidden" %>
   		   <%= form.check_box :completed, :checked => false,  class: "invisible"  %>
   		   <%= form.submit "Not Yet", class: "btn btn-outline-danger" %>
   		  <% end %>

   		  </td>
  		<td> <center>
  		<% link_to 'Show', list %> 
   		<% link_to 'New', new_list_path, class:'btn btn-info' %>
   		<% link_to 'Edit', edit_list_path(list) %>
   		<%= link_to 'Delete', list, class:'btn btn-danger', method: :delete, data: {confirm:'Are you sure?'} %>
   		</center></td>
   		</tr>
   		
  <% else %>
   		<tr >
   		<td><%= link_to list.description, edit_list_path(list) %> </td>
   		<td>
   		  <%= form_for(list) do |form| %>
   		   <%= form.text_field :description, type: "hidden" %>
   		   <%= form.check_box :completed, :checked => true, class: "invisible"  %>
   		   <%= form.submit "Completed", class: "btn btn-outline-success" %>
   		  <% end %>
   		  	

   		  </td>
  		<td> <center>
  		<% link_to 'Show', list %> 
   		 <% link_to 'Edit', edit_list_path(list), class:'btn btn-info' %>
   		 <%= link_to 'Delete', list, class:'btn btn-danger', method: :delete, data: {confirm:'Are you sure?'} %>
   		</center></td>
   		</tr>
   </tbody>
  <% end %>
   			
    
  <% end %>

  </table>
</div>

<br/>
<br/>

<%= link_to "Delete All Mark Completed", home_trash_em_path, class:'btn btn-danger', data: {confirm:'Are you sure'} %> |

